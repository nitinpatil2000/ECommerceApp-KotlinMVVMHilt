<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sizeShadow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="#B8D9FA"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageColor"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@color/g_gray500"
        app:layout_constraintBottom_toBottomOf="@id/sizeShadow"
        app:layout_constraintEnd_toEndOf="@id/sizeShadow"
        app:layout_constraintStart_toStartOf="@id/sizeShadow"
        app:layout_constraintTop_toTopOf="@id/sizeShadow" />

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="XXL"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/imageColor"
        app:layout_constraintEnd_toEndOf="@id/imageColor"
        app:layout_constraintStart_toStartOf="@id/imageColor"
        app:layout_constraintTop_toTopOf="@id/imageColor" />

</androidx.constraintlayout.widget.ConstraintLayout>